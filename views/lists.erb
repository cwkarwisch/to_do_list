<ul id="lists">
  <% sorted_lists(@lists) do |list, index| %>
    <li class=<%= list_class(list) %>>
      <a href='/lists/<%= index %>'>
        <h2>
          <%= list[:name] %>
        </h2>
        <p>
          <%= incomplete_tasks_count(list) %> / <%= tasks_count(list) %>
        </p>
      </a>
    </li>
  <% end %>
</ul>

<% content_for :header_links do %>
  <a class="add" href="/lists/new">Create a New List</a>
<% end %>
