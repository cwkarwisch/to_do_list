<ul id="lists">
  <% @lists.each_with_index do |list, index| %>
    <li>
      <a href='/lists/<%= index %>'>
        <h2>
          <%= list[:name] %>
        </h2>
        <p>
          <%= list[:todos].size %>
        </p>
      </a>
    </li>
  <% end %>
</ul>
<br>
<a href="/lists/new">Create a New List</a>